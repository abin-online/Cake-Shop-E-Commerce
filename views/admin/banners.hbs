<script>
function toggleBannerStatus(bannerId, status) {
    const action = status ? 'Block' : 'Unblock';
    const actionUrl = '/admin/toggle_banner';

    Swal.fire({
        title: `Are you sure you want to ${action} this banner?`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: `${action}`
    }).then((result) => {
        if (result.isConfirmed) {
            $.ajax({
                type: 'POST',
                url: actionUrl,
                contentType: 'application/json',
                data: JSON.stringify({ id: bannerId, active: !status }), // Send updated active status
                success: function (response) {
                    Swal.fire({
                        title: 'Done!',
                        text: `Banner successfully ${action}ed!`,
                        icon: 'success',
                        confirmButtonText: 'Okay'
                    }).then(() => {
                        const btn = $(`[data-banner-id="${bannerId}"]`);
                        btn.text(status ? 'Unblock' : 'Block');
                        btn.attr('onclick', `toggleBannerStatus('${bannerId}', ${!status})`);
                    });
                },
                error: function (xhr, status, error) {
                    console.error(`Error ${action}ing banner:`, error);
                    Swal.fire("Error", "Something went wrong. Please try again later.", "error");
                }
            });
        }
    });
}

</script>



