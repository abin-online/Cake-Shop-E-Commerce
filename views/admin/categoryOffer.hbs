
<main class="main-wrap">
  <section class="content-main">
    <div class="content-header">
      <h2 class="content-title">List of Offers</h2>
      <div>
        <a href="/admin/addCatOffers" class="btn btn-primary"><i
            class="material-icons md-plus"
          ></i>
          Create New Category Offer</a>
      </div>
    </div>
    <div class="card mb-4">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th class="text-center">Category Name</th>
                <th class="text-center">Offer Percentage</th>
                <th class="text-center">Start Date</th>
                <th class="text-center">End Date</th>
                <th class="text-center">Current Status</th>
                <th class="text-center">Action</th>
              </tr>
            </thead>
            {{#if categoryOffers.length}}
              {{#each categoryOffers}}
                <tbody>
                  <tr>

                    <td class="text-center" width="15%">{{categoryName}}</td>
                    <td
                      class="text-center"
                      width="20%"
                    >{{categoryOfferPercentage}}%</td>
                    <td class="text-center" width="15%">{{startDate}}</td>
                    <td class="text-center" width="15%">{{endDate}}</td>
                    <td class="text-center" width="10%">
                      {{#if currentStatus}}
                        <span
                          class="badge rounded-pill alert-success"
                        >Active</span>
                      {{else}}
                        <span
                          class="badge rounded-pill alert-danger"
                        >Inactive</span>
                      {{/if}}
                    </td>
                    <td class="text-center" width="20%">
                      <a
                        href="/admin/editCategoryOffer/{{this._id}}"
                        class="btn btn-sm font-sm rounded btn-brand"
                      >
                        <i class="material-icons md-edit"></i>
                        Edit
                      </a>
                      <a
                        href="javascript:void(0);"
                        onclick="deleteCategoryOffer('{{this._id}}')"
                        class="btn btn-sm font-sm btn-light"
                      ><i class="material-icons md-delete"></i>Delete
                      </a>
                    </td>
                  </tr>
                </tbody>
              {{/each}}
            {{else}}
              <tbody>
                <tr>
                  <td colspan="7" class="text-center">No Category Offers
                    Available</td>
                </tr>
              </tbody>
            {{/if}}
          </table>
        </div>
      </div>
    </div>

    <div class="pagination-area mt-15 mb-50">
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-start">
          {{#each pages}}
            <li class="page-item active"><a
                class="page-link"
                href="?page={{this}}"
              >{{this}}</a></li>
          {{/each}}
        </ul>
      </nav>
    </div>

  </section>

  <footer class="main-footer font-xs">
    <div class="row pb-30 pt-15">
      <div class="col-sm-6">
        <script
          data-cfasync="false"
          src="../../../cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"
        ></script>
        <script>
          document.write(new Date().getFullYear())
        </script>
        Â©, MobileBazaar .
      </div>
      <div class="col-sm-6">
        <div class="text-sm-end">
          All rights reserved
        </div>
      </div>
    </div>
  </footer>
</main>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
  function deleteCategoryOffer(id) {  
  Swal.fire({
    title: "Are you sure?",
    text: "You won't be able to revert this!",
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#3085d6",
    cancelButtonColor: "#d33",
    confirmButtonText: "Yes, delete it!",
  }).then((result) => {
    if (result.isConfirmed) {
      
      $.ajax({
        url: `/admin/deleteCatOffer/${id}`, 
        type: "DELETE", 
        success: function (response) {          
          Swal.fire({
            title: "Deleted!",
            text: "Category offer deleted successfully.",
            icon: "success",
            timer: 2000, 
            showConfirmButton: false,
          });          
          setTimeout(() => location.reload(), 2000);
        },
            error: function (xhr, status, error) {          
            Swal.fire({
            title: "Error!",
            text: "Failed to delete the category offer. Please try again.",
            icon: "error",
          });
        },
      });
    }
  });
}
</script>