<script>




let months, ordersByMonth, revenueByMonth;

const getChartData = async (timeRange = 'monthly') => {
    const response = await fetch(`/admin/get_chart_data?timeRange=${timeRange}`, {
        headers: { 'Content-Type': 'application/json' },
    });

    const data = await response.json();

    months = data.months;
    console.log(typeof months, months);
    ordersByMonth = data.ordersByMonth;  // Fixed typo
    revenueByMonth = data.revenueByMonth; // Fixed typo

    // Update the graphs
    salesGraph(months, ordersByMonth);
    revenue(months, revenueByMonth);
};

// Event listener for time range selection
document.getElementById('timeRange').addEventListener('change', (event) => {
    const selectedTimeRange = event.target.value;
    getChartData(selectedTimeRange);
});

// Initial data fetch
getChartData();

// Function to create sales graph
function salesGraph(months, ordersByMonth) {
    const ctx = document.getElementById('myChart1').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: months,
            datasets: [{
                label: '# of Sales',
                data: ordersByMonth,
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
}

// Function to create revenue graph
function revenue(months, revenueByMonth) {
    const ctx1 = document.getElementById('myChar').getContext('2d');
    new Chart(ctx1, {
        type: 'bar',
        data: {
            labels: months,
            datasets: [{
                label: '# Revenue',
                data: revenueByMonth,
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
}





function toggleDateInputs() {
                var dateRange = document.getElementById("date-range").value;
                var startDateGroup = document.getElementById("start-date-group");
                var endDateGroup = document.getElementById("end-date-group");
                var startDateInput = document.getElementById("start-date");
                var endDateInput = document.getElementById("end-date");

                var today = new Date().toISOString().split('T')[0];

                switch (dateRange) {
                    case "daily":
                        startDateInput.value = endDateInput.value = today;
                        break;
                    case "weekly":
                        var lastWeek = new Date();
                        lastWeek.setDate(lastWeek.getDate() - 6);
                        startDateInput.value = lastWeek.toISOString().split('T')[0];
                        endDateInput.value = today;
                        break;
                    case "monthly":
                        var lastMonth = new Date();
                        lastMonth.setDate(lastMonth.getDate() - 30);
                        startDateInput.value = lastMonth.toISOString().split('T')[0];
                        endDateInput.value = today;
                        break;
                    case "custom":
                        startDateInput.value = endDateInput.value = "";
                        break;
                    default:
                        startDateInput.value = endDateInput.value = "";
                        break;
                }

                startDateGroup.style.display = endDateGroup.style.display = (dateRange === "custom") ? "block" : "none";
            }




</script>
