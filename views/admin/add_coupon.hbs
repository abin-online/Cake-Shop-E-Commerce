<!DOCTYPE html>
<html>
<head>
	<title>Coupon Adding Form</title>
	<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
	<style type="text/css">
		body {
			background-color: #f5f5f5;
		}
		.card {
			border: none;
			border-radius: 10px;
			box-shadow: 0 0 10px rgba(0,0,0,0.1);
		}
		.card-title {
			font-size: 1.5rem;
			font-weight: 600;
			color: #333;
		}
		.form-control {
			border-radius: 5px;
			border-color: #ccc;
			box-shadow: none;
			font-size: 1rem;
			padding: 1.5rem;
			margin-bottom: 1.5rem;
		}
		.form-control:focus {
			border-color: #007bff;
			box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
		}
		.form-group label {
			font-weight: 500;
			color: #555;
			margin-bottom: 0.5rem;
		}
		.btn-primary {
			background-color: #007bff;
			border-color: #007bff;
			font-size: 1.1rem;
			font-weight: 600;
			padding: .75rem 1.5rem;
			transition: background-color 0.2s ease, border-color 0.2s ease;
		}
		.btn-primary:hover, .btn-primary:focus {
			background-color: #0069d9;
			border-color: #0062cc;
			box-shadow: none;
		}
	</style>
</head>


<body>
	<div class="container ">
	  <div class="row ">
	    <div class="col-md-6 mx-auto mt-5">
	      <div class="card">
	        <div class="card-body">

			<p style="text-align: center; color: green;" class="mt-4">{{couponMsg}}</p>
			<p style="text-align: center; color: red;" class="mt-4">{{couponExMsg}}</p>

	          <h2 class="card-title text-center mb-4">Add Coupon</h2>
	         <!-- HTML Form -->
<form action="/admin/add_coupon" method="post">
  <div class="form-group">
    <label for="coupon-code">Coupon Code</label>
    <input type="text" class="form-control" id="coupon-code" placeholder="Enter coupon code" name="code" required>
  </div>
 <div class="form-group">
            <label for="discount">Discount (%)</label>
            <div class="input-group">
                <input type="number" class="form-control" id="discount" placeholder="Enter discount percentage" name="percent" max="99" required>
                <div class="input-group-append">
                    <span class="input-group-text">%</span>
                </div>
            </div>
            <div class="invalid-feedback" id="discountFeedback">
                Please enter a valid discount percentage (0-99).
            </div>
        </div>
  <div class="form-group">
    <label for="max">Discount Limit</label>
    <div class="input-group">
      <input type="number" class="form-control" id="max" placeholder="Enter maximum amount" name="max" required>
    </div>
    <div style="height: 10px;"></div>
  </div>
  <div class="form-group">
            <label for="expiry-date">Expiry Date</label>
            <input type="date" class="form-control" id="expiry-date" name="expDate" required>
        </div>

  <div class="form-group text-center">
    <button type="submit" class="btn btn-primary">Add Coupon</button>
  </div>
</form>

	        </div>
	      </div>
	    </div>
	  </div>
	</div>

	<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
	<script type="text/javascript" src="https://cdn.jsdelivr.net/npm"></script>

     <script>
        document.addEventListener('DOMContentLoaded', function () {
            const expiryDateInput = document.getElementById('expiry-date');

            // Get today's date
            const today = new Date();
            const year = today.getFullYear();
            const month = String(today.getMonth() + 1).padStart(2, '0'); // Add leading zero
            const day = String(today.getDate()).padStart(2, '0'); // Add leading zero

            // Set the minimum date to today
            const minDate = `${year}-${month}-${day}`;
            expiryDateInput.setAttribute('min', minDate);

            console.log(minDate);
        });
    </script>