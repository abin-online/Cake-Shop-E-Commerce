<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/cropperjs/dist/cropper.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        /* Desktop view */
.single-slider-img img {
    height: auto; /* Maintain aspect ratio */
    max-width: 100%; /* Prevents overflow */
}

/* Mobile view */
@media (max-width: 768px) {
    .single-slider-img {
        text-align: center; /* Center-align the image container */
    }

    .single-slider-img img {
        width: 50%; /* Adjust image size for mobile */
        height: auto; /* Maintain aspect ratio */
        max-width: 100%; /* Ensure it doesn't exceed container width */
        margin: 100px 100px; /* Center the image */
        display: block; /* Ensure it's treated as a block element for centering */
    }

    /* Adjust text content layout */
    .hero-slider-content-2 {
        text-align: center; /* Center-align text on mobile */
        padding: 10px; /* Add some padding for mobile */
    }
    
    .hero-slider-content-2 h2, 
    .hero-slider-content-2 h1, 
    .hero-slider-content-2 p {
        font-size: 90%; /* Slightly reduce text size on mobile */
    }

    .btn-brush {
        padding: 10px 20px; /* Make buttons smaller */
        font-size: 14px; /* Adjust button text size */
    }
}



    </style>
</head>

    <main class="main">
            <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/" rel="nofollow">Home</a>
                {{!-- <span></span> Shop --}}
            </div>
        </div>
    </div>   
        <section class="home-slider position-relative pt-50">
            <div class="hero-slider-1 dot-style-1 dot-style-1-position-1">
                {{#each banners}}
                <div class="single-hero-slider single-animation-wrap">
                    <div class="container">
                        <div class="row align-items-center slider-animated-1">
                            <div class="col-lg-5 col-md-6">
                                <div class="hero-slider-content-2">
                                    <h4 class="animated">{{this.line1}}</h4>
                                    <h2 class="animated fw-900">{{this.line2}}</h2>
                                    <h1 class="animated fw-900 text-brand">{{this.line3}}</h1>
                                    <p class="animated">{{this.line4}}</p>
                                    <a class="animated btn btn-brush btn-brush-3" href="/product"> Shop Now </a>
                                </div>
                            </div>
                            <div class="col-lg-7 col-md-6">
                                <a href="/product">
                                <div class="single-slider-img single-slider-img-1">
                                    <img class="animated slider-1-1" src="/images/products/{{this.image}}" alt="">
                                </div>

                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
             
            </div>
            <div class="slider-arrow hero-slider-1-arrow"></div>
        </section>
        <div style="height: 30px;"><br><br></div>
        <section class="featured section-padding position-relative">            
            {{#if coupons}}
            <div class="container">
                <div class="row">
                    
                    <h3 style= "text-align: center;">Available Coupons</h3>
                    
                    <div><br></div>
                    {{#each coupons}}
                    <div class="col-lg-2 col-md-4 mb-md-3 mb-lg-0" style="text-align: center;">
                            <div class="banner-features wow fadeIn animated hover-up">
                            <img src="assets/imgs/theme/icons/feature-{{increment @index}}.png" alt="">
                            <h4 class="bg-1 coupon-code" onclick="copyCode('{{this.code}}')">{{this.code}}</h4>
                    </div>
                    </div>
                    {{/each}}
                </div>
                
            </div>
            {{/if}}
        </section>
        <section class="product-tabs section-padding position-relative wow fadeIn animated">
            <div class="bg-square"></div>
            <div class="container">
                <div class="tab-header">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="nav-tab-one" data-bs-toggle="tab" data-bs-target="#tab-one" type="button" role="tab" aria-controls="tab-one" aria-selected="true">Featured</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="nav-tab-two" data-bs-toggle="tab" data-bs-target="#tab-two" type="button" role="tab" aria-controls="tab-two" aria-selected="false">Popular</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="nav-tab-three" data-bs-toggle="tab" data-bs-target="#tab-three" type="button" role="tab" aria-controls="tab-three" aria-selected="false">New added</button>
                        </li>
                    </ul>
                    <a href="/product" class="view-more d-none d-md-flex">View More<i class="fi-rs-angle-double-small-right"></i></a>
                </div>
                <!--End nav-tabs-->
                <div class="tab-content wow fadeIn animated" id="myTabContent">
                    <div class="tab-pane fade show active" id="tab-one" role="tabpanel" aria-labelledby="tab-one">
                        <div class="row product-grid-4">

                            {{#each loadProData}}
                            <div class="col-lg-3 col-md-4 col-12 col-sm-6">
                                <div class="product-cart-wrap mb-30">
                                    <div class="product-img-action-wrap">
                                        <div class="product-img product-img-zoom">
                                            <a href="/productview?id={{this._id}}">
