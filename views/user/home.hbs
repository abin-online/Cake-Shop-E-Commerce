                    <a href="#">{{this.categoryDetails.category}}</a>
                </div>
                
                                        </div>
                                        <h2><a href="/productview?id={{this._id}}">{{name}}</a></h2>
                                        {{!-- <div class="rating-result" title="0%">
                                            <span>
                                                <span>90%</span>
                                            </span>
